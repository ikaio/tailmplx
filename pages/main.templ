package pages

import "github.com/ikaio/tailmplx/components"

type PageProps struct {
	Language string
}

var DEFAULT_PROPS = PageProps{"pt-br"}

templ Header(links []string) {
	<div class="shadow relative overflow-hidden w-full h-20 flex items-center justify-between px-5 md:px-20">
		<a href="/" class="font-thin font-serif text-xl">
			@components.Logo()
		</a>
		<div class="flex items-center gap-4">
			<div class="flex gap-3">
				<a href="/publish">
					@components.IconFilePlus()
				</a>
			</div>
		</div>
	</div>
}

templ Layout() {
	@Header([]string{"about"})
	<div class="w-full px-5 md:px-20 my-6 flex flex-col gap-3">
		{ children... }
	</div>
}

templ Page(page templ.Component, title string, props PageProps) {
	<html lang={ props.Language }>
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<!-- HTMX -->
			<script src="https://unpkg.com/htmx.org@1.9.9"></script>
			<!-- Shoelace -->
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.12.0/cdn/themes/light.css"/>
			<script type="module" src="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.12.0/cdn/shoelace-autoloader.js"></script>
			<!-- Google Fonts -->
			<!-- Own -->
			<link href="/assets/output.css" rel="stylesheet"/>
			<title>{ title }</title>
		</head>
		<body>
			@Layout() {
				@page
			}
		</body>
	</html>
}
