templ Home(cookies string) {
	<button class="flex w-full flex-wrap gap-4" type="button" hx-get="/dc/products" hx-trigger="click" hx-swap="afterbegin">
		@Products(cookies)
		<div class="px-3 py-2 bg-emerald-500 hover:bg-emerald-600 duration-100 font-bold rounded">
			+ Show More Products
		</div>
	</button>
}

templ Products(cookies string) {
	for i := 0; i < 2; i++ {
		<div class="aspect-[2/1] h-40 flex gap-2">
			<img src="/assets/flufy-bag.jpg" class="h-full rounded"/>
			<div class="flex flex-col text-left">
				<h1 class="font-bold text-xl">Fluffy Bag Adidas</h1>
				<h2 class="font-semibold text-xs">A remedy is a solution or treatment designed to alleviate or cure a problem, ailment, or difficulty. Itâ€™s something intended to correct or improve a situation, often in the context of health or well-being.</h2>
			</div>
		</div>
	}
}

type PageProps struct {
	Language string
}

templ Page(page templ.Component, title string, props PageProps) {
	<html lang={ props.Language }>
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>

			<script src="https://unpkg.com/htmx.org@1.9.9"></script>
			<meta name="htmx-config" content='{"includeIndicatorStyles": false}'/>

			<link href="/assets/output.css" rel="stylesheet"/>
			<title>{ title }</title>
		</head>
		<body class="dark:text-white dark:bg-zinc-900">
			@Header([]string{"about"})
			@Layout() {
				@page
			}
		</body>
	</html>
}

templ Layout() {
	<img src="/assets/blue-rainbow-line.png" class="w-full"/>
	<div class="w-full px-5 md:px-20 my-6 flex flex-col gap-3">
		{ children... }
	</div>
}
